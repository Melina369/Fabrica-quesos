  <div class="container text-center my-5 title1">
      <h2 class="animate__animated animate__rubberBand">Sistema de Fábrica de Quesos  <i class="fas fa-industry"></i></h2>
  </div>

    



<div class="row animate__animated animate__fadeIn">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>INGRESAR</h3>
            </div>
            <div class="card-body">
                <form action="/signin" method="POST">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Insertar Cuenta del Área Correspondiente"
                        class="form-control">
                    </div><br>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Insertar Contraseña del Área" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="">ÁREA DE LA EMPRESA:</label> <br>
                        <input type="radio" name="view" class="radio" value="1" >Producción
                        <input type="radio" name="view" class="radio" value="2">Curado
                        <input type="radio" name="view" class="radio" value="3">Administración
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mt-4">
                        Iniciar Sesión
                    </button>
                </form>
            </div>
        </div>
    </div>
